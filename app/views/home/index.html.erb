<script>
   $('.cycle-slideshow').cycle();
</script>

<div class="span12 centered-text" style="height:100%;">
<div class="row">
   <div class="cycle-slideshow" style="margin: 0 auto; text-align: center; border: 5px solid #FFF; width:100%; height:600px; padding:5px;"   
    data-cycle-timeout=2000>
    <% get_pictures_names.each do |p| %>
      <%= image_tag p, :width => "100%", :height => "100%" %>    
    <%end%>
   </div>
   </div>
</div>
<div class="container marketing" style="margin-top: 30px;">
   <div class="row">
      <div class="col-md-6 centered-text">
         <h2 class="h2-picture">מנות חדשות</h2>
          <% @new_product.each do |p| %>
             <div style="height: 150px; border-bottom: 1px solid #E0DAC1; padding-top:15px;">
               <%= image_tag get_picture_link(p.pictures), :width => "150px", :height => "150px", class: "img-thumbnail pull-left img-box" %>         
               <p><strong><%= p.name %></strong></p>
               <p><%= p.overview %></p>
               <p><%=link_to "פרטים", product_show_path(id: p.id), class: "button"%></p>
             </div>
          <%end%>                     
      </div>
      <div class="col-md-6 centered-text">
         <h2 class="h2-picture">מנות פופולריות</h2>
          <% @favorints_product.each do |p| %>
             <div style="height: 150px; border-bottom: 1px solid #E0DAC1; padding-top:15px;">
               <%= image_tag get_picture_link(p.pictures), :width => "150px", :height => "150px", class: "img-thumbnail pull-left img-box" %>         
               <p><strong><%= p.name %></strong></p>
               <p><%= p.overview %></p>
               <p><%=link_to "פרטים", product_show_path(id: p.id), class: "button"%></p>
             </div>
          <%end%>           
    </div>
   </div>
</div>


